{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "jsxImportSource": "@emotion/react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@rese/common": ["../common/*"],
      "@rese/database": ["../database/*"],
      "@/features/*": ["./features/*"],
      "@/config/*": ["./config/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "graphql/Mutation/login.graphql", "graphql/Mutation/loginByToken.graphql", "graphql/common/scalars/JSON.graphql", "graphql/common/Error.graphql", "graphql/Query/greeting.graphql"],
  "exclude": ["**/node_modules", "**/.*/"]
}
